<Configuration status="WARN">
    <Appenders>
        <File name="FileLogger" fileName="logs/app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level: %msg%n%throwable"/>
        </File>

        <SMTP name="EmailLogger" subject="Critical Error"
              to="lifekate443@gmail.com"
              from="anna-anastasiia.bonkovska.oi.2023@lpnu.ua"
              smtpHost="smtp.gmail.com"
              smtpPort="465"
              smtpUsername="anna-anastasiia.bonkovska.oi.2023@lpnu.ua"
              smtpPassword="behnzbsmjojcbdgc"
              smtpProtocol="smtps"
              bufferSize="1"
              ignoreExceptions="false">

            <Property name="mail.smtp.ssl.enable">true</Property>
            <Property name="mail.smtp.auth">true</Property>

            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %msg%n%throwable"/>

            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </SMTP>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="FileLogger"/>
        </Root>
        <Logger name="ErrorLogger" level="error" additivity="false">
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="EmailLogger"/>
        </Logger>
    </Loggers>
</Configuration>
